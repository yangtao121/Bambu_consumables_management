# Postgres
POSTGRES_DB=consumables
POSTGRES_USER=consumables
POSTGRES_PASSWORD=consumables
# 说明：下面两个通常仅用于应用内拼接数据库地址；compose 内服务互联默认用 db:5432
POSTGRES_HOST=db
POSTGRES_PORT=5432

# Backend
# 对外端口（docker-compose.prod.yml 会读取 API_PORT / FRONTEND_PORT）
API_PORT=8000
FRONTEND_PORT=3000

# 镜像版本（生产 compose 会读取 IMAGE_TAG；开发 compose 会本地 build，可忽略）
IMAGE_TAG=latest

# 应用配置
APP_ENV=dev
APP_SECRET_KEY=dev-secret-change-me
DATABASE_URL=postgresql+asyncpg://consumables:consumables@db:5432/consumables
ALLOW_INSECURE_MQTT_TLS=true

# 生产环境迁移重试（docker-compose.prod.yml 会读取；开发环境可忽略）
MIGRATION_MAX_ATTEMPTS=60
MIGRATION_RETRY_SLEEP_SEC=1

# Frontend
# 注意：这里的值不会自动跟随 API_PORT 变化，请手动保持一致。
# 生产部署时应改成你的服务器 IP/域名，例如：http://192.168.1.10:8000
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000


