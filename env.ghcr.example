# GitHub Container Registry 镜像配置
# 镜像固定来源: ghcr.io/yangtao121
IMAGE_TAG=latest           # 使用特定版本标签，如 v1.0.0

# 数据库配置
POSTGRES_DB=consumables
POSTGRES_USER=consumables
POSTGRES_PASSWORD=consumables

# 应用配置
APP_ENV=prod
APP_SECRET_KEY=change-me-in-production
DATABASE_URL=postgresql+asyncpg://consumables:consumables@db:5432/consumables
ALLOW_INSECURE_MQTT_TLS=true

# 端口配置
API_PORT=8000
FRONTEND_PORT=3000

# 前端API地址
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000

# 数据库迁移配置
MIGRATION_MAX_ATTEMPTS=60
MIGRATION_RETRY_SLEEP_SEC=1